{
    "compilerOptions": {
        "noEmitOnError": true,
        "importHelpers": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "alwaysStrict": false,
        "sourceMap": true,
        "strictNullChecks": true,
        "jsx": "react-jsx",
        "lib": ["dom", "es2018"],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "outDir": "."
    },
    "include": [
        "src",
        "serverModels",
        "serverRoutes",
        "socketRoutes",
        "webpack",
        "webpack.config.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
